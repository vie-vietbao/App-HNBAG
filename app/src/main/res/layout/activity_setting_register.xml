<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".SettingOption.SettingRegister">

    <LinearLayout
        android:layout_weight="9"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgBack"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo_back"
            android:layout_width="20dp"
            android:layout_height="20dp"></ImageView>

        <TextView
            android:layout_marginTop="50dp"
            android:text="HNBAG"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textAllCaps="true"
            android:textColor="@color/midnight"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <LinearLayout
            android:id="@+id/lnlEmail"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/bg_btn_email"
            android:layout_marginTop="70dp"
            android:layout_width="320dp"
            android:layout_height="50dp">
            <ImageView
                android:src="@drawable/logo_btn_gmail"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:layout_height="15dp"></ImageView>

            <TextView
                android:textColor="@color/gray"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Login with Email"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnlGuest"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/bg_btn_apple"
            android:layout_marginTop="15dp"
            android:layout_width="320dp"
            android:layout_height="50dp">
            <ImageView
                android:src="@drawable/logo_btn_apple"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:layout_height="15dp"></ImageView>

            <TextView
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Continue with Apple"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnlFacebook"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/bg_btn_fb"
            android:layout_marginTop="15dp"
            android:layout_width="320dp"
            android:layout_height="50dp">
            <ImageView
                android:src="@drawable/logo_btn_fb"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:layout_height="15dp"></ImageView>

            <TextView
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Continue with Facebook"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnlGoogle"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/bg_btn_email"
            android:layout_marginTop="15dp"
            android:layout_width="320dp"
            android:layout_height="50dp">
            <ImageView
                android:src="@drawable/logo_btn_google"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:layout_height="15dp"></ImageView>

            <TextView
                android:textColor="@color/gray"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Continue with Google"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12dp"
                android:text="By signing up, you confirm to have read and agreen to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/bluefb"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="our Terms of Use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:textSize="12dp"
                    android:text="and"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:textColor="@color/bluefb"
                    android:textSize="12dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="Privacy Policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnlLogin"
        android:layout_weight="1"
        android:background="@color/lightgray"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:text="Already a member?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="@color/bluefb"
            android:textSize="16dp"
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

</LinearLayout>